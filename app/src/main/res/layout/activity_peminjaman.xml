<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PeminjamanActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_kode_peminjaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_kode_peminjaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode Peminjaman"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_kode_buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_kode_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode Buku"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_id_anggota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_id_anggota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Anggota"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_tanggal_pinjam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_tanggal_pinjam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Pinjam"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_tanggal_kembali"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_tanggal_kembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Kembali"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pinjam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinjam"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"/>

</LinearLayout>